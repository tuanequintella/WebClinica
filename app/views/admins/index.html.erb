<%= icon_title_for(Admin.model_name.human(count: :many), "icon-user") %>
<div class="row-fluid">
  <div class="span12">
      <div class="box dark">
          <header>
              <div class="icons"><i class="icon-edit"></i></div>
              <h5>Lista de Administradores</h5>
              <!-- .toolbar -->
              <div class="toolbar">
                  <ul class="nav">
                      <li><%= link_to 'Novo admin', new_admin_path, 'data-target' => "#content" %></li>
                      <li class="dropdown">
                          <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                              <i class="icon-th-large"></i>
                          </a>
                          <ul class="dropdown-menu">
                              <li><a href="">q</a></li>
                              <li><a href="">a</a></li>
                              <li><a href="">b</a></li>
                          </ul>
                      </li>
                      <li>
                          <a class="accordion-toggle minimize-box" data-toggle="collapse" href="#div-1">
                              <i class="icon-chevron-up"></i>
                          </a>
                      </li>
                  </ul>
              </div>
              <!-- /.toolbar -->
          </header>
          <div id="div-1" class="accordion-body collapse in body">  
            <table class="table table-striped table-bordered table-condensed">
              <thead>
                <tr>
                  <th> Nome </th>
                  <th> Nome de usuário </th>
                  <th> E-mail </th>
                  <th> Ações </th>
                </tr>
              </thead>
              <tbody>
                <% @admins.each do |admin| %>
                  <tr>
                    <td> <%= admin.name %> </td>
                    <td> <%= admin.username %> </td>
                    <td> <%= admin.email %> </td>
                    <td> <%= link_to 'Editar', edit_admin_path(admin) %>
                         |
                         <% if admin.active? %>
                           <%= link_to 'Desativar', admin_path(admin), :method => :delete, :confirm => 'Tem certeza que deseja desativar um administrador do sistema?' %>
                         <% else %>
                           <%= link_to 'Reativar', admin_recreate_path(:admin_id=>admin), :confirm => 'Tem certeza que deseja reativar esse administrador do sistema?' %>
                         <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
      </div>
  </div>
</div>