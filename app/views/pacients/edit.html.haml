=simple_nested_form_for(@pacient, :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend
      Editar paciente
    =f.input :name
    =f.input :cpf
    =f.input :rg
    =f.input :birthdate, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :input_html => {:class => 'input-small'}
    Idade:
    =f.input :health_insurances
    =f.input :address
    =f.input :phone
    =f.input :email
    =f.input :parent_name
    =f.input :parent_rg
    =f.input :parent_cpf
    =f.input :record_id
    =f.input :record_status, :collection => Record.statuses
    =f.simple_fields_for :contact_infos do |cinfos_form|
      =cinfos_form.input :type, :collection => ContactInfo.contact_types , :label => false, :default => false
      =cinfos_form.input :value, :label => false
      =cinfos_form.link_to_remove "Remover contato"
    =f.link_to_add "Adicionar contato", :contact_infos
    %div.form-actions
      =f.button :submit, "Salvar"
      =link_to "Cancelar", pacients_path, :class => :btn
