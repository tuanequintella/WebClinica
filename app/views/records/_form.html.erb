<%= simple_form_for @record, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :record_status %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                records_path, :class => 'btn' %>
  </div>
<% end %>

