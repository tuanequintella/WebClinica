<% if flash[:error] %>
  <div class="alert alert-error fade in">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:error] %>
  </div>
<% end %>
<% if flash[:warning] %>
  <div class="alert fade in">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:warning] %>
  </div>
<% end %>
<% if flash[:success] %>
  <div class="alert alert-success fade in">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:success] %>
  </div>
<% end %>