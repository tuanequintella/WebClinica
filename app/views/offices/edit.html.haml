=simple_nested_form_for(@office, :url => office_path, :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend
      Editar cadastro
    =f.input :name
    =f.input :email
    =f.input :username, :disabled => true
    =f.simple_fields_for :contact_infos do |cinfos_form|
      =cinfos_form.input :contact_type, :collection => ContactInfo.subclasses , :label => false, :default => false
      =cinfos_form.input :value, :label => false
      =cinfos_form.link_to_remove "Remover contato"
    =f.link_to_add "Adicionar contato", :contact_infos
    %div.form-actions
      =f.button :submit, "Salvar"
      =link_to "Cancelar", office_path, :class => :btn
