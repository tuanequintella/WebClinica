<%= icon_title_for("Meu perfil", "icon-user") %>
<div class="row-fluid">
  <div class="span12">
    <div class="box dark">
      <header>
        <div class="icons"><i class="icon-info-sign"></i></div>
        <h5><%= @user.name %></h5>
        <!-- .toolbar -->
        <div class="toolbar">
          <ul class="nav">
            <li><%= link_to 'Voltar', :back, 'data-target' => "#content" %></li>
            <li><%= link_to 'Editar', edit_profile_path, 'data-target' => "#content" %></li>
            <li>
              <a class="accordion-toggle minimize-box" data-toggle="collapse" href="#div-1">
                <i class="icon-chevron-up"></i>
              </a>
            </li>
          </ul>
        </div>
        <!-- /.toolbar -->
      </header>
      
      <div id="div-1" class="accordion-body collapse in body">
        <%= render partial: 'shared/alerts' %> 
        <%= simple_form_for @user, class: "form-horizontal" do |f| %>
          <div class="control-group">
            <%= f.label :username, required: false, class: "control-label" %>
            <div class="controls">
              <div><%= @user.username %></div>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :email, required: false, class: "control-label" %>
            <div class="controls">
              <div><%= @user.email %></div>
            </div>
          </div>
          <% unless @user.is_a? Admin %>
            <div class="control-group">
              <%= f.label :cpf, required: false, class: "control-label" %>
              <div class="controls">
                <div><%= @user.cpf %></div>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :rg, required: false, class: "control-label" %>
              <div class="controls">
                <div><%= @user.rg %></div>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :birthdate, required: false, class: "control-label" %>
              <div class="controls">
                <div><%= l @user.birthdate %></div>
              </div>
            </div>
            <% if @user.is_a? Doctor %>
              <div class="control-group">
                <%= f.label :crm, required: false, class: "control-label" %>
                <div class="controls">
                  <div><%= @user.crm %></div>
                </div>
              </div>
              <div class="control-group">
                <%= f.label :gradyear, required: false, class: "control-label" %>
                <div class="controls">
                  <div><%= @user.try(:gradyear).try(:year) %></div>
                </div>
              </div>
              <div class="control-group">
                <%= f.label :occupations, required: false, class: "control-label" %>
                <div class="controls">
                  <div><%= @user.occupations.join(", ") %></div>
                </div>
              </div>
              <div class="control-group">
                <%= f.label :appointmentprice, required: false, class: "control-label" %>
                <div class="controls">
                  <div><%= number_to_currency @user.appointmentprice %></div>
                </div>
              </div>
              <div class="control-group">
                <%= f.label :health_insurances, required: false, class: "control-label" %>
                <div class="controls">
                  <div><%= @user.health_insurances.join(", ") %></div>
                </div>
              </div>
            <% end %>
            <%- @user.contact_infos.each do |cinfo| %>
              <div class="control-group">
                <%= f.label I18n.t('activerecord.attributes.contact_info.type.' + cinfo.type), required: false, class: "control-label" %>
                <div class="controls">
                  <div><%= cinfo.value %></div>
                </div>
              </div>
            <% end %>
          <% end %>
          <br />
          <font size="2"><i>Altere sua senha na <%= link_to 'ediÃ§Ã£o', edit_profile_path %> do seu perfil</i></font>
        <% end %>
      </div>
    </div>
  </div>
</div>
