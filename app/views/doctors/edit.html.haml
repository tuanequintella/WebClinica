=simple_nested_form_for(@doctor, :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend
      Editar mÃ©dico
    =f.input :name
    =f.input :email
    =f.input :username, :disabled => true
    =f.input :cpf
    =f.input :rg
    =f.input :birthdate, :start_year => Date.today.year - 80, :end_year => Date.today.year - 15, :input_html => {:class => 'input-small'}
    =f.input :crm
    =f.input :gradyear, :start_year => Date.today.year, :end_year => Date.today.year - 60, :discard_day => true, :input_html => {:class => 'input-small'}
    =f.input :occupation
    =f.input :appointmentprice, :as => :currency, :input_html => {:class => 'input-small'}
    =f.input :accepted_health_insurances
    =f.simple_fields_for :contact_infos do |cinfos_form|
      =cinfos_form.input :type, :collection => ContactInfo.contact_types , :label => false, :default => false
      =cinfos_form.input :value, :label => false
      =cinfos_form.link_to_remove "Remover contato"
    =f.link_to_add "Adicionar contato", :contact_infos
    %div.form-actions
      =f.button :submit, "Salvar"
      =link_to "Cancelar", doctors_path, :class => :btn
      -if @doctor.agenda.active?
        =link_to "Desativar agenda", agenda_path(@doctor.agenda), :method => :delete, :class=> :btn, :confirm => 'Tem certeza que deseja desativar?'
      -else
        =link_to "Reativar agenda", agenda_recreate_path(:agenda_id=>@doctor.agenda.id), :class=>:btn

